{
	"compilerOptions": {
		"strict": true,
		"alwaysStrict": true,
		"moduleResolution": "node",
		"removeComments": true,
		"pretty": true,
		"module": "ESNext",
		"target": "ES2022",
		"lib": ["ESNext"],
		"sourceMap": true,
		"incremental": true,
		"skipLibCheck": true,
		"noEmitHelpers": true,
		"importHelpers": true,
		"esModuleInterop": true,
		"noUncheckedIndexedAccess": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noImplicitOverride": true,
		"verbatimModuleSyntax": true,
		"outDir": "./dist"
	},
	"include": ["./src/**/*.ts"]
}
